    <radialGradient id="grad1" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#F0C000;stop-opacity:0.3" />
      <stop offset="50%" style="stop-color:#AA1A1A;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#131316;stop-opacity:1" />
