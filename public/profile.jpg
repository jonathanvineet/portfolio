  <path d="M 150 400 Q 150 300 250 300 Q 350 300 350 400" fill="#F0C000" opacity="0.6"/>
  
  <!-- Text -->
  <text x="250" y="450" font-family="Poppins, sans-serif" font-size="24" fill="#F0C000" text-anchor="middle" font-weight="bold">
    Add Your Photo
  </text>
  <text x="250" y="475" font-family="Inter, sans-serif" font-size="14" fill="#AA1A1A" text-anchor="middle">
    Replace profile.jpg in /public
  </text>
</svg>
